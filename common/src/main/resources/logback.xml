<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date - %-5p %t %-0X{traceId} %F:%L %m%n</pattern>
        </encoder>
    </appender>

    <logger name="scalatalk" level="DEBUG"/>
    <logger name="com.twitter" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.twitter.finatra.http.filters.AccessLoggingFilter" level="INFO" additivity="true">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
